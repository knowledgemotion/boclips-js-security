{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "webpack-config/*.js",
      "node_modules/**/*.ts"
    ],
    "rulesDirectory": [
      "tslint-plugin-prettier"
    ],
    "rules": {
      "interface-name": false,
      "no-empty-interface": false,
      "unified-signatures": false,
      "no-console": false,
      "object-literal-sort-keys": false,
      "member-ordering": false,
      "max-classes-per-file": false,
      "prettier": [
        true,
        ".prettierrc"
      ],
      "no-empty": false
    }
  }
}
